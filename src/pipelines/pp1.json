{
    "id": "pp1",
    "name": "PDF流水线1",
    "description": "「xx」替换成内链，冒号前的内容自动加粗，圆点替换成无序列表，换行替换成两个换行。",
    "tools": [
        {
            "name": "RegexReplace",
            "replacements": [
                ["「(.+?)」", "[[$1]]"],
                ["\\n+", "\n"],
                ["^(.{2,10})：", "'''$1'''："],
                ["^‧", "* "],
                ["\\n", "\n\n"]
            ],
            "flags": "gm"
        }
    ]
}
